<quick-add-drawer class="drawer fixed top-0 right-0 flex flex-col w-full has-motion js-product" role="dialog" tabindex="-1" aria-labelledby="quick-add-heading" aria-modal="true" aria-hidden="true" data-name="quickbuy" >
  <header class="drawer__header flex justify-between items-center">
    <h2 class="h4 mb-0" id="quick-add-heading">
      {{- 'products.product.choose_options' | t -}}
    </h2>
    <button type="button" class="drawer__close-btn js-close-drawer">
      <span class="visually-hidden">{{ 'accessibility.close' | t }}</span>
      {% render 'icon-close' %}
    </button>
  </header>
  <div class="drawer__content flex-auto js-product-details"></div>
  <footer class="drawer__footer">
    <div class="alert mb-6 bg-success-bg text-success-text js-added-to-cart" role="alert" hidden>
      <div class="flex justify-between">
        <span>{{ 'products.product.added_to_cart' | t }}</span>
        <a class="link text-current" href="{{ routes.cart_url }}">{{ 'cart.general.view_cart' | t }}</a>
      </div>
    </div>
    <product-form></product-form>
  </footer>
</quick-add-drawer>
