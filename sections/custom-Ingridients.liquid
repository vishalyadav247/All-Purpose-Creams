<style>
  .prev-btn[disabled],
.next-btn[disabled] {
  cursor: not-allowed;
}
</style>
<section class="product-info__block product-info__block--title container" {{ block.shopify_attributes }}>
  {% assign ingredients = product.metafields.custom.ingredient_list.value %}
  {% assign bg_color = section.settings.card_bg_color %}

  {% if ingredients != blank %}
    <div class="ingredients-section relative">
      <div class="flex justify-between items-center mb-6">
        <h1 class="product-title h2">Specifically Chosen Ingredients, Tailored For Your Skin</h1>
        <div class="ingredient-nav flex gap-4" >
          <button class="prev-btn" disabled aria-label="Previous">
            {% render 'icon-arrow-left' %}
          </button>
          <button class="next-btn" aria-label="Next">
       {% render 'icon-arrow-right' %}
          </button>
        </div>
      </div>

      <div class="ingredient-slider owl-carousel">
        {% for ingredient in ingredients %}
          <div class="ingredient-box p-6 rounded text-center h-full" style="background-color: {{ bg_color }}; min-height: 180px;">
            <h3 class="text-xl font-bold mb-2">{{ ingredient.title }}</h3>
            <p class="text-md">{{ ingredient.description }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>
<!-- Include Owl Carousel CSS & JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/owl.carousel.min.js"></script>
<script>
  $(document).ready(function(){
    var owl = $('.ingredient-slider');
    var $prevBtn = $('.prev-btn');
    var $nextBtn = $('.next-btn');

    owl.owlCarousel({
      items: 2,
      margin: 10,
      dots: false,
      nav: false,
      responsive: {
        768: {
          items: 3
          margin: 15
        }
          1280: {
          items: 4
        }
      },
      onInitialized: updateNavButtons // Call this right after init
    });

    $nextBtn.click(function() {
      owl.trigger('next.owl.carousel');
    });

    $prevBtn.click(function() {
      owl.trigger('prev.owl.carousel');
    });

    function updateNavButtons(event) {
      var currentIndex = event.item.index;
      var totalItems = event.item.count;
      var itemsShown = event.page.size;

      // Disable prev button if first slide
      if (currentIndex === 0) {
        $prevBtn.prop('disabled', true).css('opacity', 0.5);
      } else {
        $prevBtn.prop('disabled', false).css('opacity', 1);
      }

      // Disable next button if at end
      if (currentIndex + itemsShown >= totalItems) {
        $nextBtn.prop('disabled', true).css('opacity', 0.5);
      } else {
        $nextBtn.prop('disabled', false).css('opacity', 1);
      }
    }

    // Also bind update on change & resize
    owl.on('changed.owl.carousel resized.owl.carousel', function(event) {
      if (!event.namespace) return;
      updateNavButtons(event);
    });
  });
</script>


