  "name": "Ingredients Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#c3dbef"
    }
  ],
  "presets": [
    {
      "name": "Ingredients Section"
    }
  ]
}
{% endschema %}
