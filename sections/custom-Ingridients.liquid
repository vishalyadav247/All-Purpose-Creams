<carousel-slider class="ingredients-section">
  <div class="slider" id="ingredient-slider" role="region" tabindex="0">
    <ul class="slider__grid flex gap-4 overflow-x-auto scroll-smooth snap-x">
      {% assign ingredients = product.metafields.custom.ingredient_list.value %}
      {% if ingredients != blank %}
        {% for ingredient in ingredients %}
          <li class="slider__item snap-start shrink-0 w-64 bg-blue-200 p-6 rounded text-center">
            <h3 class="text-xl font-bold mb-2">{{ ingredient.title }}</h3>
            <p class="text-sm">{{ ingredient.description }}</p>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </div>

  <div class="slider-nav flex justify-between mt-4" aria-controls="ingredient-slider">
    <button class="slider-nav__btn" name="prev" aria-label="Previous slide">‹</button>
    <button class="slider-nav__btn" name="next" aria-label="Next slide">›</button>
  </div>
</carousel-slider>

{% schema %}
{
  "name": "Ingredients Section",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Ingredients Section"
    }
  ]
}
{% endschema %}
