<section class="product-info__block product-info__block--title container" {{ block.shopify_attributes }}>
  {% assign ingredients = product.metafields.custom.ingredient_list.value %}
  {% assign bg_color = section.settings.color_scheme_3_bg %}

  {% if ingredients != blank %}
    <div class="ingredients-section">
      <h1 class="product-title h2">Specifically Chosen Ingredients, Tailored For Your Skin</h1>

   <div class="ingredient-slider owl-carousel flex items-stretch">
  {% for ingredient in ingredients %}
    <div class="ingredient-box rounded text-center flex flex-col justify-between" style="background-color: {{ bg_color }};">
      <h3 class="text-xl font-bold mb-2">{{ ingredient.title }}</h3>
      <p class="text-sm">{{ ingredient.description }}</p>
    </div>
  {% endfor %}
</div>

    </div>
  {% endif %}
</section>


<!-- Include Owl Carousel JS + CSS in your theme -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/assets/owl.carousel.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/owl.carousel@2.3.4/dist/owl.carousel.min.js"></script>

<script>
  $(document).ready(function(){
    $('.ingredient-slider').owlCarousel({
      items: 2,
      margin: 15,
      nav: true,
      dots: false,
      responsive: {
        768: { items: 4 }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Ingredients Section",
  "tag": "section",
  "class": "section",
"settings": [
  {
    "type": "color",
    "id": "color_scheme_3_bg",
    "label": "Scheme 3 Background",
    "default": "#c3dbef"
  },
  {
    "type": "color_background",
    "id": "color_scheme_3_gradient",
    "label": "Scheme 3 Gradient",
    "default": "linear-gradient(0deg, rgba(255,255,255,0), rgba(255,255,255,0))"
  }
],
  "presets": [
    {
      "name": "Ingredients Section"
    }
  ]
}
{% endschema %}
